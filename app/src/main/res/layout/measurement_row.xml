<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/card_foreground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="45dp" android:layout_height="12dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/image_view_measurement_row"/>

    <TextView
            android:id="@+id/date_measurement_row"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:text="date sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/image_view_measurement_row" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/image_view_measurement_row" app:layout_constraintBottom_toBottomOf="@+id/image_view_measurement_row"/>

    <TextView
            android:text="Operator\nBatch"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/image_view_measurement_row"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="4dp" android:id="@+id/operator_measurement_row"/>

    <TextView
            android:alpha="0.75"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:text="Info, info\nInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/operator_measurement_row"
            app:layout_constraintTop_toBottomOf="@+id/image_view_measurement_row" android:layout_marginTop="4dp"
            android:layout_marginStart="8dp" android:id="@+id/info_measurement_row"/>

    <View
            android:alpha="0.3"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/info_measurement_row" android:layout_marginTop="4dp"/>

    <ImageView
            android:src="@drawable/next"
            android:layout_width="15dp"
            android:layout_height="15dp" app:layout_constraintEnd_toEndOf="@+id/view" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>